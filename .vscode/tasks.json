{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: clang++ build active file",
			"command": "/usr/bin/clang++",
			"args": [
                "-fdiagnostics-color=always",
				"-std=c++17",
                "-g",
                "${workspaceFolder}/src/main.cpp", // Main program
                "${workspaceFolder}/src/chessboard.cpp", // ChessBoard implementation
				"${workspaceFolder}/src/evaluation.cpp", // ChessPiece implementation
                "-I", "${workspaceFolder}/include", // Include directory for header files
                "-o",
				"${workspaceFolder}/bin/main" // Output binary
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: /usr/bin/clang++"
		}
	]
}
